<% provide(:title, 'Edit User') %>
<h1>Edit user</h1>

<%= twitter_bootstrap_form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>
	<%= f.text_field :name %>
	<%= f.email_field :email, :placeholder => 'me@example.com'%>
	<%= f.date_select :born_on, 'Born On', {:start_year => 1950}, :class => 'small' %>

    <%= f.password_field :password do %>
    <span class=help-block>
        <br/>Must be no larger than 6 characters
        <br/>Must contain only the letters 'x' or 'p'
    </span>
	<% end %>
	<%= f.password_field :password_confirmation, 'Confirm Password'%>
	<%= f.actions do%>
	    <%= button_tag  'Submit	', :type => 'submit', :class => 'btn-success'%>
	    <%= button_tag  'Reset	', :type => 'reset', :class => 'btn'%>
	<% end %>
<% end %>
<div>
  <%= gravatar_for(@user) %>
  <a href="http://gravatar.com/emails">change</a>
</div>